{% extends 'base.twig' %}

{% block body %}
    <div class="container body-content">
        <div class="row">
            {% for article in articles %}
                <div class="col-md-12 well">
                    <article>
                        <header>
                            <h2>{{ article.title }}</h2>
                            <h5>{{ article.author }}</h5>
                        </header>
                        <div>

                            <img src="{{ base_url() }}/uploads/images/{{ article.image }}" width="400" height="200" >
                            <p>
                                {{ article.summary }}
                            </p>
                        </div>
                        <footer>
                            <div class="pull-right">
                                <a class="btn btn-success btn-xs" href="{{ path_for('article_view', {'id': article.id}) }}">view &raquo;</a>
                                <a class="btn btn-danger btn-xs" href="{{ path_for('article_delete', {'id': article.id}) }}">delete &raquo;</a>
                                <a class="btn btn-success btn-xs" href="{{ path_for('article_edit', {'id': article.id}) }}">edit &raquo;</a>
                            </div>
                        </footer>
                    </article>
                </div>
                <hr />

            {% endfor %}
        </div>
    </div>



{% endblock %}

